# Sample environment variables for CONSTRUO 2026
# Copy this file to .env and fill values before running locally or on Railway

# Server
PORT=3000
NODE_ENV=production
CORS_ORIGIN=

# MongoDB (use MongoDB Atlas or Railway MongoDB plugin)
MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/construo?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Cloudinary (recommended for uploads in production)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: Analytics / 3rd party keys
# SENTRY_DSN=
# OTHER_KEY=
